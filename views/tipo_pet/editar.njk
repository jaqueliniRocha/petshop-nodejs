{% extends "layout.njk" %}

{% block pagina %}

<h1>Alteração de Tipos Pet</h1>
<div class="col-md-6">
  <form action="/tipo_pet/{{tipos_pet.id}}" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" value="{{tipos_pet.nome}}">
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="#" class="btn btn-default">Voltar</a>
  </form>
</div>

{% endblock %}
